{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "OpenLoveImage",
  "version": "0.1.0",
  "identifier": "com.openloveimage.desktop",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "OpenLoveImage - Free Image Converter",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "OpenLoveImage",
    "category": "Graphics and Design",
    "shortDescription": "Free and secure image converter",
    "longDescription": "Modern image converter with before/after preview - Convert HEIC, JPG, PNG, WebP, GIF, BMP, TIFF, SVG with advanced features. All conversions happen locally for maximum privacy."
  }
}
